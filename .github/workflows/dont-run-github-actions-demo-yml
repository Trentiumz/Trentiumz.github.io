name: Github Actions Demo
run-name: ${{ github.actor }} is testing out GitHub Actions
on: [push]

jobs: 
  Explore-GitHub-Actions:
    runs-on: ubuntu-latest
    steps: 
      - run: echo "Job is triggered by ${{ github.event_name }} event!"
      - run: echo "This job is now running on a ${{ runner.os }} server hosted by GitHub"
      - run: echo "The name of your branch is ${{ github.ref }} and your repo is ${{ github.repository }}"
      - name: Check out repo code
        uses: actions/checkout@v4
      - run: echo "The ${{ github.repository }} repo has been cloned to the runner"
      - run: echo "Workflow is ready to test"
      - name: List files in the repository
        run: |
          ls ${{ github.workspace }}
      - run: echo "this job's status is ${{ job.status }}"